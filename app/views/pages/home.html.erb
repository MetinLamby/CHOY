
<div id="banner">
  <h1 class="banner-text">CHOY</h1>
</div>

<div class="container container-form">
  <div class="row container-row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4 form-login">
      <h2>Subscribe</h2>
      <%= simple_form_for @subscriber do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, placeholder: "bob@gmail.com" %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Subscribe", class: "btn btn-ghost" %>
      </div>
      <% end %>
    </div>
  </div>
</div>



